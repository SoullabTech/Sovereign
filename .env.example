# MAIA Analytics Dashboard - Environment Configuration
# Phase 4.4D - Docker Deployment

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# PostgreSQL Connection
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=maia_consciousness
POSTGRES_USER=maia
POSTGRES_PASSWORD=maia_secure_pass

# Database URL (constructed from above)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment
NODE_ENV=production

# Application URL
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Server Port
PORT=3000

# =============================================================================
# ANALYTICS CONFIGURATION
# =============================================================================

# Enable/disable analytics features
ANALYTICS_ENABLED=true

# Data export settings
EXPORT_CSV_ENABLED=true
EXPORT_RESEARCH_ENABLED=true

# System health monitoring
HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Session secret (change in production!)
SESSION_SECRET=change_this_to_a_random_string_in_production

# CORS origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# =============================================================================
# PERFORMANCE OPTIMIZATION
# =============================================================================

# API response caching (seconds)
API_CACHE_TTL=60

# Max connections per pool
DB_POOL_MAX=20

# Query timeout (milliseconds)
DB_QUERY_TIMEOUT=5000

# =============================================================================
# FEATURE FLAGS
# =============================================================================

# Enable elemental theme system
ELEMENTAL_THEMES_ENABLED=true

# Enable real-time updates
REALTIME_UPDATES_ENABLED=true

# Enable export functionality
EXPORT_ENABLED=true

# =============================================================================
# LOGGING & MONITORING
# =============================================================================

# Log level (error, warn, info, debug)
LOG_LEVEL=info

# Enable request logging
LOG_REQUESTS=true

# Enable performance monitoring
MONITOR_PERFORMANCE=true

# =============================================================================
# DOCKER-SPECIFIC CONFIGURATION
# =============================================================================

# Healthcheck endpoint
HEALTHCHECK_PATH=/api/analytics/system

# Container restart policy
RESTART_POLICY=unless-stopped

# =============================================================================
# OPTIONAL: EXTERNAL SERVICES
# =============================================================================

# Redis (optional, for caching)
# REDIS_URL=redis://localhost:6379

# Prometheus metrics endpoint (optional)
# PROMETHEUS_ENABLED=false
# PROMETHEUS_PORT=9090
