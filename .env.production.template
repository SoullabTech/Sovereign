# Memory system
NEXT_PUBLIC_MEMORY_REFERENCES_ENABLED=false

# ─────────────────────────────────────────────────────────────────────────────────
# SOVEREIGNTY ENFORCEMENT
# ─────────────────────────────────────────────────────────────────────────────────
SOVEREIGNTY_MODE=true
FORCE_LOCAL_EMBEDDINGS=true

# Spiralogic consciousness framework
