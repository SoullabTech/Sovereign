# Production Environment Variables
# Copy this file to .env.production and fill in your values

# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=https://maia.yourdomain.com
NEXT_PUBLIC_API_URL=https://api.yourdomain.com

# Database
DATABASE_URL=postgresql://username:password@host:5432/maia_production
REDIS_URL=redis://username:password@host:6379

# Authentication
JWT_SECRET=your_super_secure_jwt_secret_at_least_32_chars
NEXTAUTH_SECRET=your_nextauth_secret_at_least_32_chars
NEXTAUTH_URL=https://maia.yourdomain.com

# AI Services
OPENAI_API_KEY=sk-your-openai-api-key
ANTHROPIC_API_KEY=your-anthropic-api-key

# Voice Services
ELEVENLABS_API_KEY=your-elevenlabs-api-key
GOOGLE_CLOUD_TEXT_TO_SPEECH_KEY=your-google-tts-key

# Vector Database (for AI context)
PINECONE_API_KEY=your-pinecone-api-key
PINECONE_ENVIRONMENT=your-pinecone-environment

# Security
CORS_ORIGIN=https://maia.yourdomain.com,https://yourdomain.com
RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW_MS=900000

# Monitoring
SENTRY_DSN=your-sentry-dsn
ANALYTICS_ID=your-analytics-id

# Email (for notifications)
SMTP_HOST=smtp.yourdomain.com
SMTP_USER=noreply@yourdomain.com
SMTP_PASS=your_smtp_password

# File Storage
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=maia-voice-recordings

# WebRTC/Voice
TURN_SERVER_URL=turn:turnserver.yourdomain.com:3478
TURN_USERNAME=your-turn-username
TURN_PASSWORD=your-turn-password